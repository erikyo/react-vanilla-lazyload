{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "ES2015", "ES2022", "ESNext"],
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"outDir": "lib/",
		"declaration": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./lazyload-example", "./node_modules"]
}
